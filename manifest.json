{
    "manifest_version": 2,
    "name": "video2clipboard",
    "description": "Copy a video link with the current time code via context menu to clipboard.",
    "version": "0.0.2",
    "homepage_url": "https://github.com/0xC4N1/video2clipboard",
    "default_locale": "en",

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "menus"
    ]
}
